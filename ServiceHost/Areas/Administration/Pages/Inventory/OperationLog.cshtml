@model List<IM.Application.Contracts.Inventory.InventoryOperationViewModel>

@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title"> سوابق گردش انبار  </h4>
</div>


<div class="modal-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>عملیات</th>
                <th>تاریخ</th>
                <th>اپراتور</th>
                <th>تعداد</th>
                <th>موجودی فعلی</th>
                <th> توضیحات</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-black @(item.Operation ? "bg-success" : "bg-danger")">
                    <td>@item.Id</td>
                    <td>
                        @if (item.Operation)
                        {
                            <span>افزایش</span>
                        }
                        else
                        {
                            <span>کاهش</span>
                        }
                    </td>
                    <td>@item.OperationDate</td>
                    <td>@item.Operator</td>
                    <td>@item.Count</td>
                    <td>@item.CurrentCount</td>
                    <td>@item.Description</td>

                </tr>
            }
        </tbody>

    </table>



</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
    <button type="submit" class="btn btn-info waves-effect waves-light">تعریف</button>
</div>
